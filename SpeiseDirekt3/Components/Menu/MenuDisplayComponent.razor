@layout MenuLayout
@using SpeiseDirekt3.Components.Menu.MenuDisplayComponents

@if (Menu != null)
{
    if (Menu.ComplexNavigation)
    {
        <ComplexMenuDisplayComp Preview="Preview" Menu="Menu" />
    }
    else
    {
        <SimpleMenuDisplayComp Menu="Menu" />
    }
}

@code {
    [Parameter] public Menu? Menu { get; set; }
    [Parameter] public bool Preview { get; set; }
}
