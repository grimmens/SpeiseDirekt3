@inherits LayoutComponentBase
@layout SpeiseDirekt3.Components.Layout.MainLayout

<!-- Account Management Layout -->
<!-- Header Section -->
<div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-8">
    <div class="p-6">
        <div class="flex items-center">
            <div class="flex-shrink-0">
                <div class="h-12 w-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="h-6 w-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
            </div>
            <div class="ml-4">
                <h1 class="text-3xl font-bold text-gray-900 font-display">Account Management</h1>
                <p class="mt-1 text-gray-600">Manage your account settings and preferences</p>
            </div>
        </div>
    </div>
</div>

<!-- Content Section -->
<div class="lg:grid lg:grid-cols-12 lg:gap-8">
    <!-- Navigation Sidebar -->
    <div class="lg:col-span-3">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Settings</h3>
                <p class="mt-1 text-sm text-gray-600">Manage your account preferences</p>
            </div>
            <div class="p-2">
                <ManageNavMenu />
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="lg:col-span-9 mt-8 lg:mt-0">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="p-6">
                @Body
            </div>
        </div>
    </div>
</div>
