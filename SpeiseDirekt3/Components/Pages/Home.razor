@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<div class="container py-5">
    <div class="jumbotron bg-light p-5 rounded text-center">
        <img src="image/speise-direkt.png" alt="Speise-Direkt Logo" class="mb-4" width="100" height="100" />
        <h1 class="display-4">Speise-Direkt</h1>
        <p class="lead">Effortlessly create menus and generate QR codes for your online menus.</p>
        <hr class="my-4" />
        <p>Speise-Direkt is an innovative online platform that enables restaurateurs to create digital menus in no time and link them with QR codes. With just a few clicks, you can design your menu online and give guests a modern, contactless way to access the dishes you offer.</p>
    </div>

    <section id="features" class="mt-5">
        <h2>Product Features</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Menu Editor</h5>
                        <p class="card-text">An intuitive editor for creating and customizing your menus.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">QR Code Generator</h5>
                        <p class="card-text">Automated generation and management of QR codes for each menu.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Contactless Access</h5>
                        <p class="card-text">Guests scan the code and access the digital menu directly.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-5">
        <h2>Documentation</h2>
        <ul>
            <li><a href="/docs/getting-started">Getting Started</a></li>
            <li><a href="/docs/qr-generation">QR Code Integration</a></li>
            <li><a href="/docs/api">API Reference</a></li>
        </ul>
    </section>

    <section class="mt-5">
        <h2>User Claims</h2>
        <ul>
            @foreach (var claim in AuthState.User.Claims)
            {
                <li>@claim.Type: @claim.Value</li>
            }
        </ul>
    </section>
</div>

@code {
    [CascadingParameter]
    private Task<AuthenticationState> authenticationState { get; set; }

    private AuthenticationState AuthState => authenticationState.Result;
}
